@page "/sales"
@using AvalaunchDashboard.Shared
@inject AppState _state


<MudTable Items="@Data.Items" Dense="true" Hover="true" Bordered="false" 
        Striped="true" Filter="Filter" Loading="@Data.Loading">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Sales</MudText>
        <MudSpacer/>
        <MudButton Disabled="@Data.Loading" OnClick="RefreshData" Variant="Variant.Filled">Refresh data</MudButton>
        <MudSpacer />
        <MudTextField @bind-Value="searchString" Placeholder="Search" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Contract</MudTh>
        <MudTh>Symbol</MudTh>
        <MudTh>Token</MudTh>
        <MudTh>Date</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Address">@context.Address</MudTd>
        <MudTd DataLabel="TokenSymbol">@context.TokenSymbol</MudTd>
        <MudTd DataLabel="TokenName">@context.TokenName</MudTd>
        <MudTd DataLabel="Time">@context.Time.ToLongDateString()</MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>
