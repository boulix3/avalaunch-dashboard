@page "/sales"
@inject IDialogService DialogService
@inject AppState _state


<MudTable Items="@Data.Items" Dense="true" Hover="true" Bordered="false" Striped="true" Filter="Filter"
    Loading="@Data.Loading">
    <ToolBarContent>
        <MudText Typo="Typo.h6">Sales data</MudText>
        <MudSpacer />
        <MudButton Disabled="@Data.Loading" OnClick="RefreshData" Variant="Variant.Filled">Refresh data</MudButton>
        <MudSpacer />
        <MudTextField @bind-Value="searchString" Placeholder="Search" Adornment="Adornment.Start"
            AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
    </ToolBarContent>
    <HeaderContent>
        <MudTh>Contract</MudTh>
        <MudTh>Symbol</MudTh>
        <MudTh>Token</MudTh>
        <MudTh>Date</MudTh>
        <MudTh>Vesting info</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Address">
            
            <MudButton Color="Color.Inherit" 
                Href="@SnowtraceContractLink(context.Address)" Target="_blank">
@context.Address            </MudButton>
            
        </MudTd>
        <MudTd DataLabel="TokenSymbol">@context.TokenSymbol</MudTd>
        <MudTd DataLabel="TokenName">@context.TokenName</MudTd>
        <MudTd DataLabel="Time">@context.Time.ToShortDateString()</MudTd>
        <MudTd DataLabel="Vesting">
            <MudButton Variant="Variant.Text" StartIcon="@Icons.Material.Outlined.Info" Color="Color.Primary" OnClick="()=>ShowVestingInfo(context)">
                @VestingInfo(context)
            </MudButton>
        </MudTd>
    </RowTemplate>
    <PagerContent>
        <MudTablePager />
    </PagerContent>
</MudTable>
